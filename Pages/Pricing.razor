@page "/pricing"


<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Pricing</h1>
    <p class="lead">Choose the best plan for your music recording, distributing, marketing, and licensing needs.</p>
</div>

<div class="container">
    <div class="card-deck mb-3 text-center">
        <!-- Basic -->
        <div class="card mb-4 box-shadow bg-gradient-pink">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal text-dark">Basic</h4>
            </div>
            <div class="card-body chocolate-bg">
                <h1 class="card-title pricing-card-title">$99 <small class="text-muted">/ mo</small></h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>4 User Seats ($20 per add'l seat)</li>
                    <li>100K monthly visual views</li>
                    <li>100GB bandwidth</li>
                    <li>7-day Activity History</li>
                    <!-- More features -->
                </ul>
               
            </div>
        </div>
        <!-- Growth -->
        <div class="card mb-4 box-shadow bg-gradient-brown">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal text-dark">Growth</h4>
            </div>
            <div class="card-body chocolate-bg">
                <h1 class="card-title pricing-card-title">$449 <small class="text-muted">/ mo</small></h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>8 User Seats ($40 per add'l seat)</li>
                    <li>500K monthly visual views</li>
                    <li>500 GB bandwidth</li>
                    <li>30-day Activity History</li>
                    <!-- More features -->
                </ul>
               
            </div>
        </div>
        <!-- Enterprise -->
        <div class="card mb-4 box-shadow bg-gradient-mixed">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal text-dark">Enterprise</h4>
            </div>
            <div class="card-body chocolate-bg">
                <h1 class="card-title pricing-card-title">Custom <small class="text-muted">/ mo</small></h1>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>20 User Seats</li>
                    <li>1M monthly visual views</li>
                    <li>1TB+ bandwidth</li>
                    <li>Unlimited Activity History</li>
                    <!-- More features -->
                </ul>
            </div>
        </div>
    </div>
</div>
